
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PRNAssG8.Models;
@model PRNAssG8.Models.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
<title>Update</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<style>
    .all{
        padding: 20px ;
        margin:auto;
        width:50%;
        border: 1px solid;
        box-shadow: 3px 8px #888888;
    }
</style>
</head>
<body>
    <div class="all">

   
        <form asp-controller="Admin" asp-action="Update" method="post">
            <div class="input-group">
            <span class="input-group-text">ProductName</span><input type="text" name="ProductName" class="form-control" asp-for=ProductName/>
            </div><br/>

            <div class="input-group">
            <input type="file" name="Image" class="form-control"/><span class="input-group-text" asp-for=Image>Image</span>   
            </div><br/>

            <div class="input-group">
            <span class="input-group-text">Price</span><input type="text" name="Price" class="form-control" asp-for=Price><span class="input-group-text">$</span>   
            </div><br/>

            <div class="input-group">
            <span class="input-group-text">Date</span><input type="date" name="Date" class="form-control" asp-for=Date>
            </div><br/>

            <div class="input-group">
            <span class="input-group-text">Detail</span><textarea name="Detail" class="form-control" asp-for=Detail></textarea>
            </div><br/>

            <div class="input-group">
            <span class="input-group-text">CategoryId</span><select name="CategoryId" class="form-select" asp-for=Category>
                    @foreach(var p in ViewBag.Category)
                    {
                        <option value="@p.CategoryId">@p.CategoryName</option>
                    }
                </select>
            </div><br/>

            <div class="input-group">
            <span class="input-group-text">Detail</span><select name="Status" class="form-select" asp-for=Status>
                <option value="1">activate</option>
                <option value="0">non  activate</option>
            </select>
            </div><br/>

             <button type="submit"  class="btn btn-primary">Add</button>

        </form>
    </div>

</body>
</html>