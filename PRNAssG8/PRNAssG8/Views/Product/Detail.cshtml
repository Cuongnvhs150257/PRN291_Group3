@{
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
<title>Page Title</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<style>
    .all{
        padding: 20px ;
        margin:auto;
        width:50%;
        border: 1px solid;
        box-shadow: 3px 8px #888888;
    }
 
</style>
</head>
<body>
    <div class="all">
        @foreach(var p in ViewBag.product)
        {
            <div >
                <img src="~/views/img/m-i-ch-nh-h-ng-lenovo-lp40-tws-tai-nghe-kh-ng-d-y-bluetooth.jpg_q90.jpg"  style="align-items:center;" width=900 height=500 >
            </div>
            <div>
                <h1>@p.ProductName</h1>
                <h4>@p.Date</h4>
                <h4>@p.Price</h4>
                @foreach(var c in ViewBag.cate)
                {
                    @if (@p.CategoryId == @c.CategoryId)
                    {
                        <h4>@c.CategoryName</h4>
                    }
                }
                <h5>@p.Detail</h5>
            </div>
        }
       

    </div>

</body>
</html>