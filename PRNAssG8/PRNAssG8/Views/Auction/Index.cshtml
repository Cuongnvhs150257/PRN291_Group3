@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PRNAssG8.Models;
@model List<Product>
@*
    Auction Page
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .imgdd{
      width:150px;
      height:auto;
  }
  .me{
      width:100%;
      height:200px;
  }
  .countdown{
      font-family: 'Roboto', sans-serif;
      align-items: center;
      justify-content:center;
      display: inline-block;
      width: 200px;
      height:70px;
      font-size:50px;
      margin: 0 auto;
      margin-left: 650px;
      margin-top: 30px;
  }
</style>
<div class=me>
    <p class="countdown" id="countdown"></p>
</div>


<script src="~/js/script.js">
    
</script>


<div class="container">
        <div class="cart_inner">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Product</th>
                  <th scope="col">Bidder</th>
                  <th scope="col">Price Origin</th>
                  <th scope="col">Auction Price</th>
                </tr>
              </thead>
              <tbody>
                  @foreach (var p in Model)
                    {   
                <tr>
                  <td>
                    <div class="media">
                      <div class="d-flex">
                        <img class="imgdd"
                          src="~/img/product/@p.Image"
                          alt=""
                        />
                      </div>
                      <div class="media-body">
                        <p>@p.ProductName</p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <h5>@p.Price USD</h5>
                  </td>
                  <td>
                    <h5>@p.Price USD</h5>
                  </td>
                  <td>
                    <h5>$720.00</h5>
                  </td>
                </tr>
                
                }
                
              </tbody>
            </table>
          </div>
        </div>
      </div>